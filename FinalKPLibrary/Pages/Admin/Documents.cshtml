@page
@model DocumentsModel
@{
    ViewData["Title"] = "Documents Management";
}

<h2>Documents Management</h2>

<h3>Upload New Document</h3>
<form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
    <div class="form-group">
        <label for="file">Choose a file (.docx or .pdf):</label>
        <input type="file" class="form-control" id="file" name="file" accept=".docx,.pdf" required />
    </div>
    <div class="form-group">
        <label for="name">Document Name:</label>
        <input type="text" class="form-control" id="name" name="name" required />
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" class="form-control" id="description" name="description" required />
    </div>
    <div class="form-group">
        <label for="topic">Topic:</label>
        <input type="text" class="form-control" id="topic" name="topic" required />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<h3>Document List</h3>

<form method="get" class="position-relative">
    <div class="input-group">
        <input type="text" id="searchInput" name="searchQuery" placeholder="Search..." value="@Model.SearchQuery" class="form-control" />
        <button type="submit" class="btn btn-primary">Search</button>
        <button type="button" id="clearSearch" class="btn btn-secondary" style="display: none;">❌</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th><a asp-page="./Documents" asp-route-sortBy="Name" asp-route-sortOrder="@Model.NextSortOrder" asp-route-searchQuery="@Model.SearchQuery">Name</a></th>
            <th><a asp-page="./Documents" asp-route-sortBy="Description" asp-route-sortOrder="@Model.NextSortOrder" asp-route-searchQuery="@Model.SearchQuery">Description</a></th>
            <th><a asp-page="./Documents" asp-route-sortBy="Topic" asp-route-sortOrder="@Model.NextSortOrder" asp-route-searchQuery="@Model.SearchQuery">Topic</a></th>
            <th><a asp-page="./Documents" asp-route-sortBy="UploadDate" asp-route-sortOrder="@Model.NextSortOrder" asp-route-searchQuery="@Model.SearchQuery">Upload Date</a></th>
            <th>File Path</th>
            <th>Visibility Areas</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var doc in Model.Documents)
        {
            <tr>
                <td><a asp-page="/Admin/DocumentDetails" asp-route-id="@doc.Id">@doc.Name</a></td>
                <td>@doc.Description</td>
                <td>@doc.Topic</td>
                <td>@doc.UploadDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@doc.FilePath</td>
                <td>
                    @if (doc.DocVisibilityAreas != null && doc.DocVisibilityAreas.Any())
                    {
                        @string.Join(", ", doc.DocVisibilityAreas.Select(dva => dva.VisibilityArea?.Name))
                    }
                    else
                    {
                        <span>null</span>
                    }
                </td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@doc.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
        document.addEventListener("DOMContentLoaded", function () {
        let searchInput = document.getElementById("searchInput");
        let clearSearch = document.getElementById("clearSearch");

        function toggleClearButton() {
            clearSearch.style.display = searchInput.value.length > 0 ? "inline-block" : "none";
        }

        searchInput.addEventListener("input", toggleClearButton);
        toggleClearButton();

        clearSearch.addEventListener("click", function () {
            searchInput.value = "";
            clearSearch.style.display = "none";

            let url = new URL(window.location.href);
            url.searchParams.delete("searchQuery");
            window.location.href = url.toString();
        });
    });

</script>