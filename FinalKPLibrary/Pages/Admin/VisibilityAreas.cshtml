@page
@model VisibilityAreasModel
@{
    ViewData["Title"] = @Resources.Resource.Visibility_Areas_Management;
}

<h2>@Resources.Resource.Visibility_Areas_Management</h2>

<h3>@Resources.Resource.Add_New_Visibility_Area</h3>
<form method="post" asp-page-handler="Add">
    <div class="form-group">
        <label for="name">@Resources.Resource.Visibility_Area_Name:</label>
        <input type="text" class="form-control" id="name" name="name" required />
    </div>
    <button type="submit" class="btn btn-primary">@Resources.Resource.Add</button>
</form>

<h3>@Resources.Resource.Visibility_Areas_List</h3>
<table class="table">
    <thead>
        <tr>
            <th>@Resources.Resource.Name</th>
            <th>@Resources.Resource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var area in Model.VisibilityAreas)
        {
            <tr>
                <td>@area.Name</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@area.Id">
                        <button type="submit" class="btn btn-danger">@Resources.Resource.Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>